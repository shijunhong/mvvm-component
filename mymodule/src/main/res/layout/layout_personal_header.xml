<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">
    <data>

        <variable
            name="itemData"
            type="com.ikang.staffapp.data.entity.MeListBean" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myHeadercl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/myHeaderIv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/basic_color_placeholder"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入昵称"
            android:textColor="@color/text_light_dark"
            android:textSize="@dimen/text_size_16_dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meHeaderIv"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

